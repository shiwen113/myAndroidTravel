<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- 标题 -->
    <declare-styleable name="Title">
        <attr name="titleBarTitle" format="string" />
        <attr name="titleBarLeftImage" format="reference" />
        <attr name="titleBarRightImage" format="reference" />
        <attr name="titleBarBackground" format="reference|color" />
        <!-- 字体的颜色 -->
        <attr name="titleBarColor" format="color" />
    </declare-styleable>

    <!-- MyTextView: 属性名-属性取值类型 -->
    <declare-styleable name="mytextview">
        <attr name="mytextsize" format="dimension|reference"></attr>
        <attr name="mytextcolor" format="color|reference"></attr>
    </declare-styleable>

    <attr name="visible_tab_count" format="integer"></attr>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="visible_tab_count"></attr>
    </declare-styleable>
    
    
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <attr name="src" format="reference"></attr>

    <declare-styleable name="CustomImageView">
        <attr name="borderRadius" />
        <attr name="type" />
        <attr name="src" />
    </declare-styleable>
    
</resources>
