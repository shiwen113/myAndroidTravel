<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="btn_screnery">
	   <item name="android:background">#ffffff</item>
	</style>
	<style name="size">
		<item name="android:textSize">30sp</item>
	</style>
	 <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
	  <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/activity_translate_in</item>
        <item name="android:windowExitAnimation">@anim/activity_translate_out</item>
    </style>
	
	<style name="PopupAnimation1" parent="android:Animation" mce_bogus="1">          
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>     
        <item name="android:windowExitAnimation">@anim/popup_exit</item>     
    </style> 
</resources>
