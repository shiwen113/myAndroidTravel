<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    tools:context="com.example.material.TeammembersActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#35B4F8"
        android:orientation="vertical" >

        <TextView
           android:id="@+id/TV_TeammembersActivity_Travelteammembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="旅行队成员" />

        <Button
            android:id="@+id/BT_TeammembersActivity_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#35B4F8"
            android:text="返回" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_below="@+id/TV_TeammembersActivity_TEAM"
        android:background="#35B4F8"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/IM_TeammembersActivity_PICTURE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/touxiang" />

        <TextView
          android:id="@+id/tv_TeammembersActivity_AGE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="22" />

        <TextView
            android:id="@+id/TV_TeammembersActivity_NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/IM_TeammembersActivity_PICTURE"
            android:text="乐灿灿" />

        <TextView
            android:id="@+id/TV_TeammembersActivity_SEX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:layout_toRightOf="@+id/TV_TeammembersActivity_NAME"
            android:text="男" />

    </RelativeLayout>

    <TextView
        android:id="@+id/TV_TeammembersActivity_TEAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="队名" />

</RelativeLayout>