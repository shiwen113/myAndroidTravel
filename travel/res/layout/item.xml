<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xxy="http://schemas.android.com/apk/res/com.gem.scenery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >

    <!-- 首页里的item -->

    <com.gem.home.view.CustomImageView
        android:id="@+id/iv_civ"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        xxy:src="@drawable/pic_duckr"
        xxy:type="circle" >
    </com.gem.home.view.CustomImageView>

    <TextView
        android:id="@+id/itview_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/iv_civ"
        android:text="苏州——拉萨" />

    <TextView
        android:id="@+id/itview_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/itview_place"
        android:text="23号从苏州出发，跟当地的旅行团" />

    <ScrollView
        android:id="@+id/sv_scrol_img"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignLeft="@+id/itview_allDay"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/itview_intro" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:src="@drawable/ic_launcher" />

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sv_scrol_img"
        android:background="#FFCC00" />

    <TextView
        android:id="@+id/itview_allDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toLeftOf="@+id/textView5"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sv_scrol_img"
        android:text="赞11" />

      <TextView
          android:id="@+id/itview_teamName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/sv_scrol_img"
          android:text="送分队" />

      <TextView
          android:id="@+id/itview_userName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/iv_civ"
          android:layout_toRightOf="@+id/iv_civ"
          android:text="提莫" />

      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/itview_userName"
          android:layout_alignBottom="@+id/itview_userName"
          android:layout_centerHorizontal="true"
          android:text="男18" />

</RelativeLayout>