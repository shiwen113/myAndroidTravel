    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_find_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
   
    </LinearLayout>

</RelativeLayout>