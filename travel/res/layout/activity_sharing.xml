<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

     <LinearLayout
        android:id="@+id/linearLayout_shoucang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6699CC"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:background="#6699CC"
            android:src="@drawable/back_pressed" />

        <TextView
            android:id="@+id/tv_travel_infor_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fenxaing"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />
    </LinearLayout>

     <ListView
         android1:id="@+id/lv_mine_listview"
         android1:layout_width="match_parent"
         android1:layout_height="match_parent"
         android1:layout_alignParentLeft="true"
         android1:layout_below="@+id/linearLayout_shoucang"
         >
     </ListView>

</RelativeLayout>