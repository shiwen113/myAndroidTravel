<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#009DDA"
    tools:context="com.example.material.SharingActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#26A2F2" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_centerHorizontal="true"
            android:text="我的分享"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/im_SharingActivity_return"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:onClick="click"
            android:src="@drawable/returnnew" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="460dp"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="17dp"
        android:background="#A4B0C8" >

        <TextView
            android:id="@+id/tv_SharingActivity_mytravelteam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="旅行队 ：" />

        <TextView
            android:id="@+id/tv_SharingActivity_myshareteamname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/tv_SharingActivity_mytravelteam"
            android:text="队名" />

        <TextView
            android:id="@+id/tv_SharingActivity_mysceneryspot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_SharingActivity_mytravelteam"
            android:text="景点 ：" />

        <TextView
            android:id="@+id/tv_SharingActivity_myeveryonepace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_SharingActivity_mysceneryspot"
            android:layout_alignBottom="@+id/tv_SharingActivity_mysceneryspot"
            android:layout_toRightOf="@+id/tv_SharingActivity_mysceneryspot"
            android:text="某某风景区名" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_SharingActivity_mysceneryspot"
            android:src="@drawable/tiananmen" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@+id/textView6"
            android:layout_toRightOf="@+id/imageView2"
            android:src="@drawable/red" />

        <TextView
            android:id="@+id/tv_SharingActivity_whenposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView6"
            android:layout_toLeftOf="@+id/button3"
            android:text="正在显示当前位置" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_SharingActivity_whenposition"
            android:layout_alignParentRight="true"
            android:text="2小时前" />

        <ImageView
            android:id="@+id/im_SharingActivity_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignLeft="@+id/textView6"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView1"
            android:text="乐灿灿" />

        <Button
            android:id="@+id/bt_SharingActivity_mysharinggivesomebodythumbsup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tv_SharingActivity_whenposition"
            android:layout_marginBottom="41dp"
            android:text="点赞 ：88" />

        <Button
           android:id="@+id/bt_SharingActivity_mysharecomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt_SharingActivity_mysharinggivesomebodythumbsup"
            android:layout_alignBottom="@+id/bt_SharingActivity_mysharinggivesomebodythumbsup"
            android:layout_alignParentRight="true"
            android:text="评论 ：88" />

    </RelativeLayout>

</RelativeLayout>