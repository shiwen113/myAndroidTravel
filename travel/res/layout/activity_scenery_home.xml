<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.gem.scenery.utils.HomeTitle_Activity
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.gem.scenery.utils.HomeTitle_Activity>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/tv_screnery_hot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="热门"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_screnery_plaza"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="广场"
             android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_screnery_present"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="当季"
             android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
      <ImageView
        android:id="@+id/iv_underline"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/iv_underline2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/iv_underline3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
         />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_scenery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.28" >
    </android.support.v4.view.ViewPager>

</LinearLayout>