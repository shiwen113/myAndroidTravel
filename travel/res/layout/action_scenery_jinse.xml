    <TextView
        android:id="@+id/iv_issue_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="12小时前"
         android:textColor="#000000" />

