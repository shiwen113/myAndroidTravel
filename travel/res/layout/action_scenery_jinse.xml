    <ImageButton
        android:id="@+id/Search_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_user_picture"
        android:layout_below="@+id/iv_user_picture"
        android:src="@drawable/xin" />

    <TextView
        android:id="@+id/Search_tv_Adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Search_ib"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/tv_user_name"
        android:text="1008"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_scenery_pinglun"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Search_ib"
        android:layout_alignRight="@+id/iv_issue_picture"
        android:text="评论1" />

