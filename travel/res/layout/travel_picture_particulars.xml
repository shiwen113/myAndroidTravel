<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#6699cc"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/im_back_picture_all_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:src="@drawable/back_one" />

        <TextView
            android:id="@+id/tv_picture_all_data"
            style="@style/size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/lvxingduixiangqing"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_edit_travel_team"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_point_picture_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_picture_comment"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:text="景点：大理古城苍山门"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/iv_picture_picture_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_point_picture_comment"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:src="@drawable/g9453908" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_picture_picture_comment"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip" >

        <ImageView
            android:id="@+id/iv_user_picture_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ceshitu" />

        <TextView
            android:id="@+id/tv_user_name_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:text="李娜"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/iv_issue_picture_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="12小时前"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:background="#c0c0c0" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/Search_ib_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            />

        <TextView
            android:id="@+id/Search_tv_Adapter_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="1008"
            android:textColor="#000000" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c0c0c0"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/tv_picture_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll_ll"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:text="旅行队：菜刀队"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#c0c0c0"
        android:gravity="center" >

        <EditText
            android:id="@+id/et_comment_input"
            android:layout_width="274dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_edittext"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/bt_fasong_comment"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:background="@drawable/chat_submit" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_comment_danji_pinglun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/iv_picture"
        android:layout_below="@+id/linearLayout1" >

    </ListView>

</RelativeLayout>